{
    "compilerOptions": {
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "baseUrl": ".",
        "jsx": "preserve",
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        // TODO: remove after migration
        "allowJs": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ]
}
